datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"  
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

model User {
  id         String   @id @default(uuid())  
  username   String   @unique
  email      String   @unique
  password   String

  permission String   @default("user")
}